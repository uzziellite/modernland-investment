---
import Layout from "../layouts/layout.astro"
import Intro from "../components/Intro.vue"
import Whatsapp from "../components/Whatsapp.vue"
import BookingForm from "../components/BookingForm.vue"

const data_url = import.meta.env.PUBLIC_CMS_LOCATION
---

<Layout title="Book a site visit | Modern Land Investment" description="Book a free site visit to our property. All site visits are available from Monday to Saturday">
	<Intro
		background="/images/property.webp"
		title="Book Site Visit"
		description="Secure a site visit by filling the form below"
	/>
	<div class="container mx-auto my-12" id="book">
    <h2 class="text-2xl md:text-3xl lg:text-4xl capitalize text-center dark:text-white font-semibold">
      Book site visits
    </h2>
    <p class="text-center text-stone-800 dark:text-white">
    	Secure your free site visits from Monday to saturday.
    </p>
    <div class="grid p-2">
    	<BookingForm client:load />
    </div>
  </div>
  <Whatsapp client:load />
</Layout>
